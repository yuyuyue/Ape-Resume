<!-- miniprogram/pages/index/index.wxml -->
<view class="page">
  <view class="header">
    <image class="userAvatar" src="{{userInfo.avatarUrl}}" />
    <view class="nickName">{{userInfo.nickName}}</view>
  </view>
  <view class="body">
    <view class="top">
      <view class="temp" bindtap="goTest">
        <view class="iconBg orange">
          <image class="itemIcon" src="../../images/test.svg" />
        </view>
        <view class="itemName">猿力测试</view>
      </view>
       <view class="temp" bindtap="addInfo">
        <view class="iconBg green">
          <image class="itemIcon" src="../../images/add.svg" />
        </view>
        <view class="itemName">添加信息</view>
      </view>
     
    </view>
    <view class="bottom" >
      <view class="temp" bindtap="makeRes">
        <view class="iconBg red">
          <image class="itemIcon " src="../../images/make.svg" />
        </view>
        <view class="itemName">简历生成</view>
      </view>
      <view class="temp" bindtap="howToUse">
        <view class="iconBg blue">
          <image class="itemIcon" src="../../images/use.svg" />
        </view>
        <view class="itemName">如何使用</view>
      </view>
    </view>
  </view>
</view>