.bg-light-blue {
  background-color: #F5FAFE;
}

.babel {
  position: relative;
}

.help {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.yuanlizhi {
  height: 450rpx;
  display: flex;
  font-weight: bold;
  align-items: center;
  justify-content: center;
  color: #515151;
  flex-direction: column;
}

.title {
  font-size: 24px;
  text-align: center;
  line-height: 90rpx;
  width: 100%;
}

.value {
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  background-color: blue;
  margin-top: 30rpx;
}

.footer {
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 190rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #00A3FF;
  color: #f1f1f1;
  border-radius: 5px;
  box-shadow: 0px 0px 3px #1296db;
}

.help-page {
  background-color: #fff;
  width: 600rpx;
  height: 800rpx;
  box-shadow: 0 0 12rpx #e6e6e6;
  border-radius: 10px;
  z-index: 1000;
  position: fixed;
  top: 140rpx;
  left: 75rpx;
}

.help-title {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 20px;
}

.help-text {
  width: 500rpx;
  margin-left: 50rpx;
}

.help-text-tip {}

.fw-b {
  font-weight: bold;
}

.help-scroll {
  height: 600rpx;
}

.help-close {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #ffffff;
  background-color: #00A3FF;
  border-radius: 5px;
}

.help-text-method {
  margin-top: 10px;
  font-size: 14px;
}

.help-image {
  width: 500rpx;
  height: 200rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}