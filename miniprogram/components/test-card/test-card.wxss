.test-card {
  margin-top: 50rpx;
  width: 600rpx;
  margin-left: 75rpx;
}
.test-card .title{
  background-color: #fff;
  height: 60rpx;
  border-radius: 5px 5px 0 0;
}
.test-card .title .point{
  width: 10px;
  height: 10px;
  border-radius:50%;
  display: inline-block;
  vertical-align: center;
  margin-left: 20rpx;
}
.test-card .title .text {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}
.card-search{
  height: 180rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  box-shadow: 2px 2px 10px#f1f1f1;
  border-radius:0 0 5px 5px;
}
.search-image{
  width: 80rpx;
  height: 80rpx;
  margin-left: 40rpx;
}
.search-input{
  margin-left: 50rpx;
  width: 260rpx;
}
.search-result {
  height: 60rpx;
  border-radius: 0 0 5px 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.down-icon{
  width: 60rpx;
  height: 40rpx;
  transition: all 1s;
}
.search-detail{
  width: 500rpx;
  margin-left: 50rpx;
  border-radius: 5px;
  margin-bottom: 20rpx;
  transition: all 1s;
}
.h-0 {
  height: 0;
  overflow: hidden;
}
.h-auto{
  height: auto;
}
.search-list{
  height: 70rpx;
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.search-icon{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}
.search-text {
  font-size: 12px;
}
.search-label{
  margin-left: 10rpx;
  font-weight: bold;
}
.search-num{
  flex: 1;
  text-align: right;
  padding-right: 30rpx;
}
.fw-b{
  font-weight: bold;
}
